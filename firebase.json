{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [ {
      "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers" : [ {
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"
      } ]
      }, {
      "source" : "**/*.@(jpg|jpeg|gif|png)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "public, max-age=31536000, immutable"
      } ]
      },{
      "source" : "**/*.@(js)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "public, max-age=0, must-revalidate"
      } ]
    }]
  }
}
